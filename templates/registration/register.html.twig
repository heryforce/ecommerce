{% extends 'base.html.twig' %}

{% block title %}{% trans %}Création de compte{% endtrans %}{% endblock %}

{% block body %}
    <h1>{% trans %}Création de votre compte{% endtrans %}</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.username, {
            label: 'Pseudo'
        }) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
        <button type="submit" class="btn btn-primary">{% trans %}Créer{% endtrans %}</button>
    {{ form_end(registrationForm) }}
{% endblock %}
